<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="#6c252525">
    <item android:id="@android:id/mask">
        <shape android:shape="rectangle">
            <solid android:color="#000000"/>
            <corners android:radius="25dp"/>
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <solid android:color="#00aaaa"/>
            <corners android:radius="25dp"/>
        </shape>
    </item>

    <item>
        <selector android:enterFadeDuration="50" android:exitFadeDuration="100">
            <item android:state_focused="true" android:drawable="@drawable/widgets_cornet_shape"/>
            <item android:state_pressed="true" android:drawable="@drawable/widgets_cornet_shape"/>
            <item android:state_selected="true" android:drawable="@drawable/widgets_cornet_shape"/>
            <item android:state_hovered="true" android:drawable="@drawable/widgets_cornet_shape"/>
        </selector>
    </item>
</ripple>